rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read avatars, user-only writes to their own folder
    match /avatars/{userId}/{allPaths=**} {
      // Relaxed: avatars are visible without auth
      allow read: if true;
      // Writes only by the signed-in owner
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny everything else by default (tighten/expand as needed)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
